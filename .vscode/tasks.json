{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "tests",
                "-v"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Train Models",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/train_models.py"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Generate Predictions",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/predict.py"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Collect Odds Data",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/run_the_odds_tomorrow.py"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Backtest",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/backtest.py"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
