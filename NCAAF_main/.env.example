# SportsDataIO API Configuration
SPORTSDATA_API_KEY=your_api_key_here
SPORTSDATA_BASE_URL=https://api.sportsdata.io/v3/cfb
SPORTSDATA_TIMEOUT=30

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=ncaaf_v5
DATABASE_USER=ncaaf_user
DATABASE_PASSWORD=change_this_password_in_production
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
APP_ENV=development
LOG_LEVEL=info

# Ingestion Service Configuration
INGESTION_PORT=8080
WORKER_INTERVAL=60  # Poll every 60 seconds for active games
WEBHOOK_ENABLED=true
WEBHOOK_SECRET=change_this_webhook_secret

# ML Service Configuration
ML_SERVICE_PORT=8000
ML_SERVICE_HOST=ml_service
MODEL_PATH=/app/models

# Scheduler Configuration
ENABLE_SCHEDULER=true
INITIAL_SYNC_ENABLED=true  # Run initial data sync on first startup
NIGHTLY_REFRESH_CRON=0 2 * * *  # 2 AM daily
ACTIVE_GAME_POLL_INTERVAL=60  # seconds

# API Rate Limiting
API_RATE_LIMIT=100  # requests per minute
API_BURST_LIMIT=20

# Caching Configuration
CACHE_TTL_TEAMS=86400  # 24 hours
CACHE_TTL_ODDS=300  # 5 minutes
CACHE_TTL_PREDICTIONS=600  # 10 minutes

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_LINE_MOVEMENT_TRACKING=true
ENABLE_SHARP_PUBLIC_DIVERGENCE=true
ENABLE_CLV_TRACKING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
