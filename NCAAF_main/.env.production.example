# NCAAF v5.0 Production Environment Variables
# Copy this to .env.production and fill in the values

# ==============================================================================
# SECURITY - CHANGE THESE IN PRODUCTION!
# ==============================================================================
DATABASE_USER=ncaaf_prod_user
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET

# ==============================================================================
# SportsDataIO API
# ==============================================================================
SPORTSDATA_API_KEY=YOUR_PRODUCTION_API_KEY_HERE
SPORTSDATA_BASE_URL=https://api.sportsdata.io/v3/cfb
SPORTSDATA_TIMEOUT=30

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_NAME=ncaaf_v5_prod
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_SSL_MODE=require  # Use 'require' or 'verify-full' in production

# ==============================================================================
# Redis Configuration
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==============================================================================
# Application Settings
# ==============================================================================
APP_ENV=production
LOG_LEVEL=info  # Options: debug, info, warn, error
VERSION=1.0.0

# ==============================================================================
# Ingestion Service
# ==============================================================================
INGESTION_PORT=8080
ENABLE_SCHEDULER=true
INITIAL_SYNC_ENABLED=true
WORKER_INTERVAL=60  # seconds between active game polls
NIGHTLY_REFRESH_CRON=0 2 * * *  # 2 AM daily

# ==============================================================================
# ML Service
# ==============================================================================
ML_SERVICE_PORT=8000
MODEL_PATH=/app/models

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_LINE_MOVEMENT_TRACKING=true
ENABLE_CACHING=true
ENABLE_WEBHOOKS=true
ENABLE_METRICS=true

# ==============================================================================
# Caching TTL (seconds)
# ==============================================================================
CACHE_TTL_TEAMS=86400      # 24 hours
CACHE_TTL_GAMES=300        # 5 minutes
CACHE_TTL_ODDS=30          # 30 seconds
CACHE_TTL_STATS=3600       # 1 hour
CACHE_TTL_PREDICTIONS=900  # 15 minutes

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==============================================================================
# Monitoring
# ==============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================================================
# Backup & Maintenance
# ==============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *  # 3 AM daily
BACKUP_RETENTION_DAYS=30

# ==============================================================================
# Deployment
# ==============================================================================
# Use this for image tagging in production
# Example: docker-compose -f docker-compose.prod.yml up -d
