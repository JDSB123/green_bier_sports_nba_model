{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "compose: down",
      "type": "shell",
      "command": "docker compose down",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "python: create venv",
      "type": "shell",
      "command": "python -m venv .venv",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "python: install deps",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m pip install -r ml_service/requirements.txt",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "ml_service: run API (dev)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m uvicorn ml_service.src.api.main:app --reload --host 0.0.0.0 --port 8000",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "ingestion: manual fetch",
      "type": "shell",
      "command": "go run ./ingestion/cmd/manualfetch",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "ingestion: worker",
      "type": "shell",
      "command": "go run ./ingestion/cmd/worker",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
