# NBA Model v6.0 - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED - API Keys
# =============================================================================
THE_ODDS_API_KEY=your_the_odds_api_key_here
API_BASKETBALL_KEY=your_api_basketball_key_here

# =============================================================================
# REQUIRED - API Base URLs
# =============================================================================
THE_ODDS_BASE_URL=https://api.the-odds-api.com/v4
API_BASKETBALL_BASE_URL=https://v1.basketball.api-sports.io

# =============================================================================
# REQUIRED - Season Configuration
# =============================================================================
CURRENT_SEASON=2025-2026
SEASONS_TO_PROCESS=2024-2025,2025-2026

# =============================================================================
# REQUIRED - Data Directories
# =============================================================================
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed

# =============================================================================
# REQUIRED - Filter Thresholds (betting prediction filters)
# =============================================================================
# Spread filters
FILTER_SPREAD_MIN_CONFIDENCE=0.55
FILTER_SPREAD_MIN_EDGE=1.0

# Total filters
FILTER_TOTAL_MIN_CONFIDENCE=0.55
FILTER_TOTAL_MIN_EDGE=1.5

# Moneyline filters (FG/1H)
FILTER_MONEYLINE_MIN_CONFIDENCE=0.55
FILTER_MONEYLINE_MIN_EDGE_PCT=0.03

# Q1-specific filters (STRICTER - use 60% min confidence for profitability)
FILTER_Q1_MIN_CONFIDENCE=0.60
FILTER_Q1_MIN_EDGE_PCT=0.05

# =============================================================================
# OPTIONAL - Local Development Configuration
# =============================================================================
# Port for local Docker container (default: 8090)
NBA_API_PORT=8090

# Full API URL - for scripts connecting to API
# Local: http://localhost:8090
# Azure: https://$(az containerapp show -n nba-gbsv-api -g nba-gbsv-model-rg --query properties.configuration.ingress.fqdn -o tsv)
NBA_API_URL=http://localhost:8090

# CORS origins (comma-separated)
ALLOWED_ORIGINS=*

# =============================================================================
# OPTIONAL - API Authentication
# =============================================================================
REQUIRE_API_AUTH=false
SERVICE_API_KEY=

# =============================================================================
# OPTIONAL - Premium Features (for betting splits, etc.)
# =============================================================================
BETSAPI_KEY=
ACTION_NETWORK_USERNAME=
ACTION_NETWORK_PASSWORD=
KAGGLE_API_TOKEN=

# =============================================================================
# OPTIONAL - Teams Integration
# =============================================================================
# Get from Teams channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=

# =============================================================================
# OPTIONAL - Logging
# =============================================================================
LOG_LEVEL=INFO
