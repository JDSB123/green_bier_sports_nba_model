# NBA Model - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED - API Keys (baked into container at build time)
# =============================================================================
THE_ODDS_API_KEY=your_the_odds_api_key_here
API_BASKETBALL_KEY=your_api_basketball_key_here

# =============================================================================
# OPTIONAL - Local Development Configuration
# =============================================================================
# Port for local Docker container (default: 8090)
NBA_API_PORT=8090

# Full API URL - for scripts connecting to API
# Local: http://localhost:8090
# Azure: https://$(az containerapp show -n nba-picks-api -g greenbier-enterprise-rg --query properties.configuration.ingress.fqdn -o tsv)
NBA_API_URL=http://localhost:8090

# CORS origins (comma-separated)
ALLOWED_ORIGINS=*

# =============================================================================
# OPTIONAL - API Authentication
# =============================================================================
REQUIRE_API_AUTH=false
SERVICE_API_KEY=

# =============================================================================
# OPTIONAL - Teams Integration
# =============================================================================
# Get from Teams channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=

# =============================================================================
# OPTIONAL - Logging
# =============================================================================
LOG_LEVEL=INFO
