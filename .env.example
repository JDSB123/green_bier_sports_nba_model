# NBA Model v33.0.11.0 - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED - API Keys
# =============================================================================
THE_ODDS_API_KEY=your_the_odds_api_key_here
API_BASKETBALL_KEY=your_api_basketball_key_here

# =============================================================================
# REQUIRED - API Base URLs
# =============================================================================
THE_ODDS_BASE_URL=https://api.the-odds-api.com/v4
API_BASKETBALL_BASE_URL=https://v1.basketball.api-sports.io

# =============================================================================
# REQUIRED - Season Configuration
# =============================================================================
CURRENT_SEASON=2025-2026
SEASONS_TO_PROCESS=2024-2025,2025-2026

# =============================================================================
# REQUIRED - Data Directories
# =============================================================================
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed

# =============================================================================
# REQUIRED - Filter Thresholds (EDGE-ONLY filtering as of v33.1.5)
# =============================================================================
# NOTE: Confidence thresholds are DISABLED (set to 0.0). Only edge matters.
# The confidence value is still calculated and reported for diagnostics.

# Spread filters (EDGE-ONLY)
FILTER_SPREAD_MIN_CONFIDENCE=0.0
FILTER_SPREAD_MIN_EDGE=2.0

# Total filters (EDGE-ONLY)
FILTER_TOTAL_MIN_CONFIDENCE=0.0
FILTER_TOTAL_MIN_EDGE=3.0

# 1H spread filters (EDGE-ONLY)
FILTER_1H_SPREAD_MIN_CONFIDENCE=0.0
FILTER_1H_SPREAD_MIN_EDGE=1.5

# 1H total filters (EDGE-ONLY)
FILTER_1H_TOTAL_MIN_CONFIDENCE=0.0
FILTER_1H_TOTAL_MIN_EDGE=2.0


# =============================================================================
# API Configuration (PRODUCTION)
# =============================================================================
# Port for local Docker container (only for local dev)
NBA_API_PORT=8090

# Full API URL - PRODUCTION is Azure Container App
# Local dev: http://localhost:8090
# PRODUCTION: https://nba-gbsv-api.livelycoast-b48c3cb0.eastus.azurecontainerapps.io
NBA_API_URL=https://nba-gbsv-api.livelycoast-b48c3cb0.eastus.azurecontainerapps.io

# CORS origins (comma-separated)
ALLOWED_ORIGINS=*

# =============================================================================
# OPTIONAL - API Authentication
# =============================================================================
REQUIRE_API_AUTH=false
SERVICE_API_KEY=

# =============================================================================
# REQUIRED - Premium Features (Betting Splits)
# =============================================================================
# Action Network is PUBLIC and REQUIRED for production predictions
# BETSAPI_KEY is optional backup source
BETSAPI_KEY=
ACTION_NETWORK_USERNAME=
ACTION_NETWORK_PASSWORD=

# =============================================================================
# OPTIONAL - Teams Integration
# =============================================================================
# Get from Teams channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=

# =============================================================================
# OPTIONAL - Logging
# =============================================================================
LOG_LEVEL=INFO
