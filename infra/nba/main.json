      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), 'default')]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}/{2}', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), 'default', 'predictions')]",
      "properties": {
        "publicAccess": "None"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), 'default')]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}/{2}', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), 'default', 'results')]",
      "properties": {
        "publicAccess": "None"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), 'default')]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "nba-gbsv-api",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.App/managedEnvironments', 'greenbier-env')]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "transport": "auto",
            "corsPolicy": {
              "allowedOrigins": [
                "http://localhost:3000",
                "https://*.azurewebsites.net",
                "https://*.greenbier.com"
              ],
              "allowedMethods": [
                "GET",
                "POST",
                "OPTIONS"
              ],
              "allowedHeaders": [
                "*"
              ]
            }
          },
          "registries": [
            {
              "server": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.ContainerRegistry/registries', 'greenbieracr'), '2023-07-01').loginServer]",
              "username": "[listCredentials(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.ContainerRegistry/registries', 'greenbieracr'), '2023-07-01').username]",
              "passwordSecretRef": "acr-password"
            }
          ],
          "secrets": [
            {
              "name": "acr-password",
              "value": "[listCredentials(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.ContainerRegistry/registries', 'greenbieracr'), '2023-07-01').passwords[0].value]"
            },
            {
              "name": "the-odds-api-key",
              "value": "[parameters('theOddsApiKey')]"
            },
            {
              "name": "api-basketball-key",
              "value": "[parameters('apiBasketballKey')]"
            },
            {
              "name": "database-url",
              "value": "[format('postgresql://gbsadmin:{0}@{1}:5432/gbs_picks?sslmode=require', parameters('postgresAdminPassword'), reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.DBforPostgreSQL/flexibleServers', format('greenbier-postgres-{0}', parameters('environment'))), '2023-03-01-preview').fullyQualifiedDomainName)]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "gbs-nba-api",
              "image": "[format('{0}/nba-model:{1}', reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.ContainerRegistry/registries', 'greenbieracr'), '2023-07-01').loginServer, parameters('imageTag'))]",
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "1Gi"
              },
              "env": [
                {
                  "name": "THE_ODDS_API_KEY",
                  "secretRef": "the-odds-api-key"
                },
                {
                  "name": "API_BASKETBALL_KEY",
                  "secretRef": "api-basketball-key"
                },
                {
                  "name": "DATABASE_URL",
                  "secretRef": "database-url"
                },
                {
                  "name": "GBS_SPORT",
                  "value": "nba"
                },
                {
                  "name": "NBA_MODEL_VERSION",
                  "value": "6.5-STRICT"
                },
                {
                  "name": "NBA_MARKETS",
                  "value": "q1_spread,q1_total,q1_moneyline,1h_spread,1h_total,1h_moneyline,fg_spread,fg_total,fg_moneyline"
                },
                {
                  "name": "NBA_PERIODS",
                  "value": "first_quarter,first_half,full_game"
                },
                {
                  "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                  "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.Insights/components', format('gbs-insights-{0}', parameters('environment'))), '2020-02-02').ConnectionString]"
                },
                {
                  "name": "AZURE_STORAGE_CONNECTION_STRING",
                  "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id))), '2023-01-01').keys[0].value)]"
                }
              ],
              "probes": [
                {
                  "type": "Liveness",
                  "httpGet": {
                    "path": "/health",
                    "port": 8080
                  },
                  "initialDelaySeconds": 10,
                  "periodSeconds": 30
                },
                {
                  "type": "Readiness",
                  "httpGet": {
                    "path": "/health",
                    "port": 8080
                  },
                  "initialDelaySeconds": 5,
                  "periodSeconds": 10
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 3,
            "rules": [
              {
                "name": "http-rule",
                "http": {
                  "metadata": {
                    "concurrentRequests": "50"
                  }
                }
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id)))]"
      ]
    }
  ],
  "outputs": {
    "containerAppFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', 'nba-gbsv-api'), '2023-05-01').configuration.ingress.fqdn]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', 'nba-gbsv-api'), '2023-05-01').configuration.ingress.fqdn)]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[format('gbs{0}data{1}', variables('sport'), uniqueString(resourceGroup().id))]"
    },
    "postgresServerFqdn": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('sharedResourceGroup')), 'Microsoft.DBforPostgreSQL/flexibleServers', format('greenbier-postgres-{0}', parameters('environment'))), '2023-03-01-preview').fullyQualifiedDomainName]"
    },
    "databaseName": {
      "type": "string",
      "value": "gbs_picks"
    }
  }
}